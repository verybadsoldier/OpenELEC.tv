. /etc/profile

LOCKDIR="/var/lock/"
LOCKFILE="vdr.disabled"
LOCKFILE_SLEEP="vdr.sleep"

mkdir -p "$LOCKDIR"
if [ ! -e "$LOCKDIR/$LOCKFILE_SLEEP" ] ; then
  touch "$LOCKDIR/$LOCKFILE"
fi

if [ "$(pidof vdr.bin)" ] ; then
  killall -q vdr.bin
  for seq in `seq 1 10` ; do
    if [ ! "$(pidof vdr.bin)" ] ; then
      break
    fi
    usleep 200000
  done
  killall -q -9 vdr.bin
fi
